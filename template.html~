<script type="text/javascript">
$(document).ready(function() {
getvehicles();
	$("#div1").show();
$("#div2").hide();
$("#div3").hide();
$("#div4").hide();
$("#div5").hide();
$("#div6").hide();

  $("#l1").click(function(e) {

	$("#div1").show();
$("#div2").hide();
$("#div3").hide();
$("#div4").hide();
$("#div5").hide();
$("#div6").hide();
	
  });

 $("#l2").click(function(e) {

	$("#div2").show();
$("#div1").hide();
$("#div3").hide();
$("#div4").hide();
$("#div5").hide();
$("#div6").hide();
	
  });
 $("#l3").click(function(e) {

	$("#div3").show();
$("#div2").hide();
$("#div1").hide();
$("#div4").hide();
$("#div5").hide();
$("#div6").hide();
	
  });
 $("#l4").click(function(e) {

	$("#div4").show();
$("#div2").hide();
$("#div3").hide();
$("#div1").hide();
$("#div5").hide();
$("#div6").hide();
	
  });
 $("#l5").click(function(e) {

	$("#div5").show();
$("#div2").hide();
$("#div3").hide();
$("#div4").hide();
$("#div1").hide();
$("#div6").hide();
	
  });
 $("#l6").click(function(e) {

	$("#div6").show();
$("#div2").hide();
$("#div3").hide();
$("#div4").hide();
$("#div5").hide();
$("#div1").hide();
	
  });





});
function getVehicleDet()
{

	var vehicle_id=$("#vehicle").val();

	var myKeyVals = { 'vehicleId': vehicle_id};	
	
	 $.ajax({

        url: "/gps/getVehicleDet.php",

        type: "post",

        dataType: "json",
	
	data: myKeyVals,

        success: function (response) {
	
	$("#det1").text(response[0].VehicleName);
	$("#det2").text(response[0].VehicleId);
	$("#det3").text(response[0].RegNo);
	$("#det4").text(response[0].UserName);


		
	console.log(response[0].VehicleName);

	},

        error: function(jqXHR, textStatus, errorThrown) {


           console.log(textStatus, errorThrown);

        }

         });
	
	
}



function getvehicles()
{
    
    $.ajax({

        url: "/gps/getVehicles.php",

        type: "get",

        dataType: "json",

        success: function (response) {
		
	

	 $.each(response, function(key, value) {
		 $('#vehicle').append('<option value=' + value.id + '>' + value.VehicleName + '</option>');
          
        });

	},

        error: function(jqXHR, textStatus, errorThrown) {


           console.log(textStatus, errorThrown);

        }

         });




}
</script>
